/**
 * Clase principal para probar la funcionalidad de gestión y validación de archivos.
 */
public class Main {
    public static void main(String[] args) {
        GestorDeArchivo gestor = new GestorDeArchivo();
        ValidadorArchivo validador = new ValidadorArchivo();

        String nombreArchivo = "ejemplo.txt";
        String contenido = "Este es un ejemplo de archivo.\nIncluye varias líneas de texto.\n";

        // 1. Guardar contenido en el archivo
        gestor.guardar(nombreArchivo, contenido);

        // 2. Leer y mostrar contenido del archivo
        String contenidoLeido = gestor.leer(nombreArchivo);
        System.out.println("📖 Contenido leído:\n" + contenidoLeido);

        // 3. Verificar si el archivo está vacío
        try {
            validador.verificarNoVacio(nombreArchivo);
            System.out.println("Verificación exitosa: El archivo contiene datos.");
        } catch (ArchivoVacioException e) {
            System.out.println("Excepción detectada: " + e.getMessage());
        }
    }
}
